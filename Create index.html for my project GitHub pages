    height: 100%; /* Asegura que todas las tarjetas tengan la misma altura */
}


.card-body .btn {
    margin-top: auto; /* Empuja el botón hacia la parte inferior */
    align-self: flex-start; /* Alinea el botón a la izquierda */
    /* O usar 'center' para centrarlo */
